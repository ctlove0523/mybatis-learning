<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.ctlove0523.mybatis.started.mapper1.CityMapper">
    <resultMap id="cityResultMap" type="City">
        <id property="cityId" column="city_id"/>
        <result property="name" column="name"/>
        <result property="countryId" column="country_id"/>
        <result property="lastUpdate" column="last_update"/>
    </resultMap>

    <select id="selectCity" parameterType="int" resultMap="cityResultMap">
        SELECT * FROM city WHERE city_id = #{id}
    </select>

</mapper>